    "@openzeppelin/contracts": "4.1.0",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.18",
    "@types/chai-almost": "^1.0.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@types/rimraf": "^3.0.0",
    "@types/utf8": "^2.1.6",
    "chai": "^4.3.4",
    "chai-almost": "^1.0.1",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.2.1",
    "hardhat-contract-sizer": "^2.0.3",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "rimraf": "^3.0.2",
    "solc": "^0.8.4",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4",
    "utf8": "^3.0.0"
  }
}
