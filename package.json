{
  "name": "premia-contracts",
  "private": true,
  "version": "1.0.0",
  "description": "Premia Finance options markets",
  "keywords": [
    "hardhat",
    "waffle",
    "solidity",
    "smart-contracts",
    "ethereum",
    "ether",
    "eth",
    "buidler",
    "wow"
  ],
  "license": "BUSL-1.1",
  "main": "index.js",
  "repository": "https://github.com/PremiaFinance/premia-contracts.git",
  "author": "Premia",
  "scripts": {
    "chain": "hardhat node --hostname 0.0.0.0",
    "compile": "hardhat compile",
    "compile:force": "hardhat compile --force",
    "postinstall": "yarn compile",
    "deploy": "hardhat deploy",
    "deploy:kovan": "hardhat run \"./scripts/deploy/testnet/0001-deployV2Kovan.ts\" --network kovan",
    "deploy:bsc": "hardhat run \"./scripts/deploy/testnet/0002-deployV2BSC.ts\" --network bsc",
    "deploy:ropsten": "hardhat run \"./scripts/deploy/testnet/0003-deployV2Ropsten.ts\" --network ropsten",
    "deploy:rinkeby": "hardhat run \"./scripts/deploy/testnet/0004-deployV2Rinkeby.ts\" --network rinkeby",
    "test": "hardhat test",
    "contract-size": "yarn run hardhat size-contracts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{md,js,ts,sol}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@premia/utils": "^0.0.4",
    "@solidstate/contracts": "^0.0.28",
    "@solidstate/library": "^0.0.28",
    "@solidstate/spec": "^0.0.28",
    "@typechain/ethers-v5": "^8.0.4",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/chai-almost": "^1.0.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "@types/utf8": "^3.0.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "abdk-libraries-solidity": "3.0.0",
    "base64-sol": "^1.1.0",
    "chai": "^4.3.4",
    "chai-almost": "^1.0.1",
    "dotenv": "^10.0.0",
    "eth-permit": "^0.2.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.8",
    "hardhat-abi-exporter": "^2.3.1",
    "hardhat-artifactor": "^0.2.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-docgen": "^1.2.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.4",
    "typescript": "^4.5.2",
    "utf8": "^3.0.0"
  }
}
