{
  "name": "premia-contracts",
  "private": true,
  "version": "1.0.0",
  "description": "Premia Finance options markets",
  "keywords": [
    "hardhat",
    "waffle",
    "solidity",
    "smart-contracts",
    "ethereum",
    "ether",
    "eth",
    "buidler",
    "wow"
  ],
  "license": "UNLICENSED",
  "main": "index.js",
  "repository": "https://github.com/PremiaFinance/premia-contracts.git",
  "author": "Premia",
  "scripts": {
    "chain": "hardhat node --hostname 0.0.0.0",
    "compile": "hardhat compile",
    "compile:force": "hardhat compile --force",
    "postinstall": "yarn compile",
    "deploy": "hardhat deploy",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "test": "hardhat test",
    "contract-size": "yarn run hardhat size-contracts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,sol}": [
      "prettier --write"
    ]
  },
