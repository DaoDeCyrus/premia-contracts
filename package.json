    "@premia/utils": "^0.0.2",
    "@solidstate/contracts": "^0.0.18",
    "@solidstate/library": "^0.0.18",
    "@solidstate/spec": "^0.0.18",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.2.0",
